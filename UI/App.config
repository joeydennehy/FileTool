<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="FileMaskedConfig" type ="System.Configuration.DictionarySectionHandler"/>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
	</configSections>
	<FileMaskedConfig>
		<add key="ImageTypes" value="*.JPEG, *.GIF"/>
		<add key="DocTypes" value="*.DOC, *.DOCX"/>
		<add key="PresentationTypes" value="*.PPT, *.PPTX"/>
		<add key="AllTypes" value="*.*"/>
	</FileMaskedConfig>
	<log4net>
		<root>
			<level value="All" />
			<appender-ref ref="LogFileAppender" />
		</root>
		<appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
			<param name="File" value="~\logger\logger\FileToolLog.txt" />
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%-5p%d{yyyy-MM-dd hh:mm:ss} – %m%n" />
			</layout>
		</appender>
	</log4net>
	<startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
	<connectionStrings>

		<add name="MasterDatabase" connectionString="Server=Catwoman;Username=ADO_cat;Password=F0undant;Database=glm_catwoman;Port=3306;CharSet=utf8;Pooling=true;Max Pool Size=5;" />
		<add name="LogConnection" connectionString="Server=Catwoman;Username=ADO_logs;Password=lumb3rj4ck;Database=glm_logs;Port=3306;CharSet=utf8;Pooling=true;Max Pool Size=20;" />

